@{
    ViewData["Title"] = "Всі працівники";
}

@model BookForEveryDay.ViewModel.UsersViewModel



<form method="post" action="~/home/AllUserInfo">
    <div class="background_employee">

        <div>

            <div class="user_info">
                <select class="all_user_option" name="users">
                    <option>Всі працівники</option>
                    @foreach (var item in Model.users)
                    {
                        <option>
                            @item.FirstName
                        </option>
                    }
                </select>
            </div>

            <div class="text_area_user">
                <label class="info_label"><font class="text_style">Інформація про працівника</font></label>
                <br /><br />
                <input class="user_info_input" type="text" />
            </div>

        </div>

        <div>
            @*<input type="submit" class="back_button" value="Адмін">*@
            <a class="user_button" asp-controller="Home" asp-action="AllUser"><font class="text_style">Переглянути</font></a>
        </div>

    </div>
</form>