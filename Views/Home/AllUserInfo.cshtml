@{
    ViewData["Title"] = "Всі працівники";
}

@model BookForEveryDay.ViewModel.UsersViewModel



<form method="post" action="~/home/IOU">
    <div class="background_employee">

        <div>

            <div class="user_info">
                <select class="all_user_option" name="user01">
                    <option>Всі працівники</option>
                    @foreach (var item in @Model.users)
                    {
                        <option>
                            @item.FirstName
                        </option>
                    }
                </select>
            </div>
            @if (ViewBag.User != null)
            {
        <div style="border: 1px solid #0094ff; padding: 10px;" class="text_area_user">

            <label class="info_label"><font class="text_style">Інформація про працівника</font></label>
            <h5>First Name</h5>
            <p>@ViewBag.User.FirstName</p>
            <h5>Last Name</h5>
            <p>@ViewBag.User.LastName</p>
            <h5>Position</h5>
            <p>@ViewBag.User.Position</p>
        </div>
            }
        </div>

        <div>
            <input  type="submit" class="user_button" value="Переглянути">
            <a class="user_button" asp-controller="Home" asp-action="UpdateUser" asp-route-name="555"><font class="text_style">Редагувати</font></a>
        </div>

    </div>
</form>